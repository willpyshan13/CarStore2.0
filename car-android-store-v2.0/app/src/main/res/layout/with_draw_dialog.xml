<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dp320"
        android:background="@drawable/shape_mine_item_bg_radius_180"
        android:layout_height="@dimen/dp480">

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="发起提现"
            android:layout_marginTop="@dimen/dp30"
            android:textStyle="bold"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="提现金额"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp90"
            android:textColor="@color/color_424242"
            android:textSize="@dimen/sp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/money"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="80000"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginTop="@dimen/dp90"
            android:textColor="@color/color_424242"
            android:textSize="@dimen/sp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="字符样式"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp150"
            android:textColor="@color/color_424242"
            android:textSize="@dimen/sp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp190"
            android:hint="请输入开户行"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input_cardNum_sub"
            app:layout_constraintTop_toBottomOf="@+id/input"
            android:layout_marginTop="@dimen/dp10"
            android:hint="请输入支行"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input_cardNum"
            app:layout_constraintTop_toBottomOf="@+id/input_cardNum_sub"
            android:layout_marginTop="@dimen/dp10"
            android:hint="请输入卡号"
            android:inputType="number"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@+id/input_cardNum"
            app:layout_constraintStart_toStartOf="parent"
            android:text="提现将于47小时到账！提示信息这样显示"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@+id/input_cardNum"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp60"
            android:id="@+id/cancel"
            android:layout_width="@dimen/dp100"
            android:text="取消"
            android:textColor="#ff1c77ff"
            android:background="@drawable/shape_radio_unchecked_line"
            android:gravity="center"
            android:textSize="@dimen/sp16"
            android:layout_marginStart="@dimen/dp44"
            android:layout_height="@dimen/dp40"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@+id/input_cardNum"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp60"
            android:id="@+id/confirm"
            android:layout_width="@dimen/dp100"
            android:text="确认提现"
            android:background="@drawable/shape_radio_checked"
            android:gravity="center"
            android:textSize="@dimen/sp16"
            android:textColor="@color/color_FFFFFF"
            android:layout_marginEnd="@dimen/dp44"
            android:layout_height="@dimen/dp40"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>