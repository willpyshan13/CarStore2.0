<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/group_img"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:maxLines="2"
                android:text="sk2神仙水75ml面霜精华护肤精华套装…"
                android:textColor="#424242"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/group_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="到店安装"
                android:textColor="#999999"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/group_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="¥"
                android:textColor="#FF0000"
                android:textSize="13sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已上架"
                android:textColor="#0091FF"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_register_item_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拼团价"
            android:textColor="#424242"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/group_amount_input"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_quiz_dialog_type"
            android:gravity="left"
            android:hint="价格"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="元"
            android:textColor="#424242"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_register_item_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成团需要人数"
            android:textColor="#424242"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/group_person_num"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_quiz_dialog_type"
            android:gravity="left"
            android:hint="数量"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="人"
            android:textColor="#424242"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>