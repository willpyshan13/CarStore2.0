<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_register_item_white_bg"
        android:orientation="vertical">

        <com.yanxin.store.ui.OptionalEditLayout
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:content_hint="请输入联系人姓名"
            app:content_tv_color="#424242"
            app:desc_content="姓名"
            app:is_content_center_gravity="true"
            app:is_input_type="edition"
            app:is_more_show="false"
            app:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#CCCCCC" />

        <com.yanxin.store.ui.OptionalEditLayout
            android:id="@+id/contact_mobile"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:content_hint="请输入联系人手机号码"
            app:content_tv_color="#424242"
            app:desc_content="手机号码"
            app:input_type="phone"
            app:is_content_center_gravity="true"
            app:is_input_type="edition"
            app:is_more_show="false"
            app:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#CCCCCC" />

        <com.yanxin.store.ui.OptionalEditLayout
            android:id="@+id/contact_type"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:content_hint="请选择人员类型"
            app:content_tv_color="#424242"
            app:desc_content="人员类型"
            app:is_content_center_gravity="true"
            app:is_input_type="textile"
            app:is_mandatory="false"
            app:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/contact_del"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_login_submit_btn"
        android:gravity="center"
        android:text="删除子账号"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone" />
</LinearLayout>